{% extends '::base.html.twig' %}
{% block title %}Login{% endblock %}

{% block stylesheets %}
{% endblock %}

{% block javascripts %}
{% endblock %}
{% block body %}
	<div class="wrapper full-page-wrapper page-login text-center">

		<div class="inner-page">
		
			<div class="logo"><img src="{{asset('img/kingadmin-logo-white-big.png')}}" alt="" /></div>
			<!--button type="button" class="btn btn-login-facebook"><span>Login via Facebook</span></button-->
			
			<!--div class="separator"><span></span></div-->
                                                                                
			<div class="login-box center-block">
				<form action="{{ path('usuario_login_check') }}" method="post" class="form-horizontal" role="form">
					<p class="title text-center">LOGIN</p>
					<div class="form-group">
						<label for="username" class="control-label sr-only">Usuario</label>
						<div class="col-sm-12">
							<div class="input-group">
								<input type="text" id="username" name="_username" placeholder="username" class="form-control" value="{{ last_username }}">
								<span class="input-group-addon"><i class="fa fa-user"></i></span>
							</div>
						</div>
					</div>
					<label for="password" class="control-label sr-only">Contraseña</label>
					<div class="form-group">
						<div class="col-sm-12">
							<div class="input-group">
								<input type="password" id="password"  name="_password" placeholder="password" class="form-control" >
								<span class="input-group-addon"><i class="fa fa-lock"></i></span>
							</div>
						</div>
					</div>
					<div class="simple-checkbox">
						<input type="checkbox" id="checkbox1">
						<label for="checkbox1">Recordarme la pr&oacute;xima vez/label>
					</div>
					<button class="btn btn-custom-primary btn-lg btn-block btn-login"><i class="fa fa-arrow-circle-o-right"></i> Entrar</button>
				{% if error %}
				<div class="error">{{ error.message }}</div>
				{% endif %}
				</form>
				
				<div class="links">
					<p><a href="page-login.html#">Olvidaste tu nombre de Usuario o Contraseña?</a></p>
					<p><a href="page-login.html#">Create New Account</a></p>
				</div>
			</div>
		</div>
		<div class="push-sticky-footer"></div>
	</div>
{% endblock %}